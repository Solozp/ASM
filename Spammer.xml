<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Frame name="Spammer" parent="UIParent" hidden="false" movable="true" enableMouse="true" enableKeyboard="true" frameStrata="DIALOG">
		<Size x="390" y="200"/>
		<Anchors><Anchor point="CENTER"></Anchor></Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background-Dark" edgeFile="Interface\Buttons\UI-SliderBar-Border">
			<BackgroundInsets left="3" right="3" top="6" bottom="6"/>
			<TileSize val="8"/>
			<EdgeSize val="8"/>
		</Backdrop>
		<Layers>
			<Layer>
				<FontString name="$parentTitleString" inherits="GameFontNormalLeft" text="SPAMMER">
					<Anchors><Anchor point="TOP"><Offset y="-10"/></Anchor></Anchors>
					<Color r="1" g="0.8" b="0"/>
				</FontString>
				<FontString name="$parentWAIT" inherits="GameFontNormal" text="Интервал">
					<Anchors><Anchor point="TOP"><Offset x="-100" y="-30"/></Anchor></Anchors>
					<Color r="1" g="0.8" b="0"/>
				</FontString>
				<FontString name="$parentCH" inherits="GameFontNormal" text="Канал">
					<Anchors><Anchor point="TOP"><Offset x="60" y="-30"/></Anchor></Anchors>
					<Color r="1" g="0.8" b="0"/>
				</FontString>
				<FontString name="MSG" inherits="GameFontNormal" text=" ">
					<Anchors><Anchor point="BOTTOM"><Offset x="0" y="10"/></Anchor></Anchors>
					<Color r="1" g="0.8" b="0"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<EditBox name="spamwaittime" enableMouse="true" numeric="true" inherits="InputBoxTemplate" letters="3">
				<Size x="25" y="15"/>
				<Anchors><Anchor point="RIGHT" relativeTo="$parentWAIT"><Offset x="35"/></Anchor></Anchors>
			</EditBox>
			<EditBox name="spamchannel" enableMouse="true" inherits="InputBoxTemplate" letters="2">
				<Size  x="20" y="15"/>	
				<Anchors><Anchor point="RIGHT" relativeTo="$parentCH"><Offset x="35"/></Anchor></Anchors>				
				<Scripts>
				   <OnEnter>
						GameTooltip:SetOwner(this, ANCHOR_TOPLEFT);
						GameTooltip:AddLine("для спама в гильдию - г \n для спама в крик - к")
						GameTooltip:Show()
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
				</Scripts>
			</EditBox>
			<CheckButton name="Switch" inherits="UICheckButtonTemplate" text="CheckButton1">
				<Size x="25" y="25"/>
				<Anchors><Anchor point="RIGHT" relativeTo="spamchannel"><Offset x="30"/></Anchor></Anchors>
				<Scripts>
					<OnClick>Channels()</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(this, ANCHOR_TOPLEFT);
						GameTooltip:AddLine("Автовыбор канала Поиск спутников")
						GameTooltip:Show()
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
				</Scripts>
			</CheckButton>
			<EditBox name="spamtext1" enableMouse="true" inherits="InputBoxTemplate" letters="255">
				<Size x="360" y="20"/>
				<Anchors><Anchor point="TOP"><Offset y="-60"/></Anchor></Anchors>
			</EditBox>
			<EditBox name="spamtext2" enableMouse="true" inherits="InputBoxTemplate" letters="255">
				<Size x="360" y="20"/>
				<Anchors><Anchor point="TOP"><Offset y="-90"/></Anchor></Anchors>				
			</EditBox>
			<EditBox name="spamtext3" enableMouse="true" inherits="InputBoxTemplate" letters="255">
				<Size x="360" y="20"/>
				<Anchors><Anchor point="TOP"><Offset y="-120"/></Anchor></Anchors>
			</EditBox>
			<Button name="Close" text="x">
				<Size x="25" y="25"/>
				<Anchors><Anchor point="TOPRIGHT" relativeTo="Spammer"><Offset x="-5" y="-5"/></Anchor></Anchors>
				<Scripts><OnClick>Spammer:Hide();</OnClick></Scripts> 				
				<NormalFont style="GameFontNormal"/> 
				<HighlightFont style="GameFontHighlight"/> 
				<DisabledFont style="GameFontDisable"/> 
				<PushedTextOffset x="0" y="0"/> 
			</Button>
		
			<Button name="$parentButtonStart" inherits="UIPanelButtonTemplate" text="Спамить!">			
				<Size x="65" y="25"/>
				<Anchors><Anchor point="BOTTOM" relativeTo="spamtext3"><Offset x="-50" y="-30"/></Anchor></Anchors>
				<Scripts>
					<OnClick>Start()</OnClick>
				</Scripts> 
			</Button>
			<Button name="$parentButtonLoad" inherits="UIPanelButtonTemplate" text="L">			
				<Size x="25" y="25"/>
				<Anchors><Anchor point="LEFT" relativeTo="SpammerButtonStart"><Offset x="-25"/></Anchor></Anchors>
				<Scripts>
					<OnClick>LoadDB();</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(this, ANCHOR_TOPLEFT);
						GameTooltip:AddLine("Загрузить данные")
						GameTooltip:Show()
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
				</Scripts> 
			</Button>
			<Button name="$parentButtonSave" inherits="UIPanelButtonTemplate" text="S">			
				<Size x="25" y="25"/>
				<Anchors><Anchor point="LEFT" relativeTo="SpammerButtonLoad"><Offset x="-25"/></Anchor></Anchors>
				<Scripts>
					<OnClick>SaveDB();</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(this, ANCHOR_TOPLEFT);
						GameTooltip:AddLine("Сохранить данные")
						GameTooltip:Show()
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
				</Scripts> 
			</Button>
			<Button name="$parentButtonStop" inherits="UIPanelButtonTemplate" text="Стоп">
				<Size x="65" y="25"/>
				<Anchors><Anchor point="BOTTOM" relativeTo="spamtext3"><Offset x="50" y="-30"/></Anchor></Anchors>
				<Scripts>
					<OnClick>AutomsgspammerOFF() SpammerButtonStart:SetText("Спамить!")</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentButtonClear" inherits="UIPanelButtonTemplate" text="C">			
				<Size x="25" y="25"/>
				<Anchors><Anchor point="RIGHT" relativeTo="SpammerButtonStop"><Offset x="25"/></Anchor></Anchors>
				<Scripts>
					<OnClick>Clear()</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(this, ANCHOR_TOPLEFT)
						GameTooltip:AddLine("Очистить текст")
						GameTooltip:Show()
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
				</Scripts> 
			</Button>	
		</Frames>
		<Scripts>
			<OnDragStart>this:StartMoving();</OnDragStart>
			<OnDragStop>this:StopMovingOrSizing();</OnDragStop>
		</Scripts>
	</Frame>
</Ui>